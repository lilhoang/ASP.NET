@model IEnumerable<DigitalApp.Models.KhachHang>

@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "~/Views/shared/LayoutUser.cshtml";
    ViewBag.active = 6;

    //Truyền một list
    ViewBag.DanhSachSinhVien = new List<String> { "Hoàng Lương", "Lường Hoang" };
}


<div class="container" style="margin-top: 130px; min-height: 80vh">
    <div class="col-md-12">
        <h4>Danh Sách Khách Hàng
            <a href="~/KhachHang/ThemMoi" style="float: right;">Thêm mới</a></h4>
        </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    Sex
                </th>
                <th>
                    Picture
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <th>
                        <img src="@item.UrlHinhAnh" style="height:100px; width: 100px"/>
                    </th>
                    <td>
                        <a href="~/KhachHang/CapNhat?idKhachHang=@item.ID">Edit</a> |
                        <a onclick="XoaKhachHang(@item.ID)" href="">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
@section script{
    <script>
        var XoaKhachHang = function (idKhachHang) {
            if (confirm("Bạn có muốn xóa hay không?") == true) {
                location.href='/KhachHang/Xoa?idKhachHang=' + idKhachHang
            }
        }
    </script>

    }
   