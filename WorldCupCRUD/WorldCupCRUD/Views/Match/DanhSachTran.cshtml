@model IEnumerable<WorldCupCRUD.Models.Matchs>

@{
    ViewBag.Title = "DanhSachTran";
    ViewBag.active = 2;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 130px; min-height: 80vh">
    <div class="col-md-12">
        <h4>
            Danh Sách Trận Đấu
            <a href="~/Match/ThemMoi" style="float: right; color:maroon; text-decoration:none">Thêm mới</a>
        </h4>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>

                </th>
                <th>
                    Team1
                </th>
                <th>

                </th>
                <th>
                    Score
                </th>
                <th>

                </th>
                <th>

                </th>
                <th>
                    Team2
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <th>
                        <img src="@item.UrlHinhAnh" style="height:50px; width:50px; border-radius:50px;" />
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team1)
                    </td>
                    <th>

                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <th>

                    </th>
                    <th>
                        <img src="@item.UrlHinhAnh2" style="height:50px; width:50px; border-radius:50px;" />
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team2)
                    </td>
                    <td>
                        <a href="~/Match/CapNhat?idMatch=@item.ID">Edit</a> |
                        <a onclick="XoaMatch(@item.ID)" href="~/Match/DanhSachTran">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@section script{
    <script>
        var XoaMatch = function (idMatch) {
            if (confirm("Bạn có muốn xóa trận đấu này?") == true) {
                location.href='/Match/Xoa?idMatch=' + idMatch
            }
        }
    </script>
}
